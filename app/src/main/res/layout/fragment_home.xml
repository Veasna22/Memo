<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="35dp"
    android:layout_height="35dp" android:src="@drawable/ic_menu"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp" android:src="@drawable/ic_search"/>
            <ImageView
                android:background="@color/dark_grey"
                android:layout_width="35dp"
                android:layout_marginLeft="10dp"
                android:layout_height="35dp" android:src="@drawable/ic_profile"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:background="@color/secondary"
        android:paddingLeft="20dp"
        android:paddingVertical="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/proxima_nova_regular"
        android:layout_height="wrap_content" android:textSize="20sp" android:text="Today"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Do a dish"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>