<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
   android:layout_gravity="center"
    android:src="@drawable/ic_menu2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search1"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/back_ground_fb"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/WelcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hellosir"
            android:textColor="@color/black"
            android:fontFamily="@font/niradei_regular">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/your"
            android:textSize="40sp"
            android:fontFamily="@font/niradei_bold1">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:text="@string/projects_3"
            android:fontFamily="@font/niradei_bold1">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:layout_marginStart="320dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:backgroundTint="@color/primary_purple"
            android:id="@+id/createnoted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:contentDescription="@string/next_screen"
            android:layout_margin="16dp" />
    </LinearLayout>

</RelativeLayout>