<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".LoadingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="105dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mental"

            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/niradei_bold"
            android:text="@string/managetask"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/niradei_regular"
            android:text="@string/txt_description"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Dot1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_dot_1"
                android:layout_marginLeft="37dp"
                />
            <ImageView
                android:id="@+id/ellipse"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ellipse_2"

                android:layout_marginLeft="23dp"
                />
            <ImageView
                android:id="@+id/ellipse_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ellipse_2"

                android:layout_marginLeft="23dp"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:background="@color/primary"
                android:src="@drawable/right_arrow"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>